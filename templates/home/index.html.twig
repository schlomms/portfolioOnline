{% extends 'base.html.twig' %}

{% block body %}
    <div class="presentation p-3">
        <div class="container-fluid">
            <div class="row justify-content-between">
                <div class="col-md-3">
                    <img src="{{ asset('assets/images/ampoule.webp') }}" alt="ampoule" class="invert img-fluid">
                </div>
                <div class="col-md-8 p-5">
                    <h1 class="text-white h3">Besoin d'un développeur web et web mobile ?</h1>
                    <div class="my-5 px-5 d-flex flex-column text-white h4 border-left border-danger">
                        <div>Ancien étudiant en license de mathématiques ...</div>
                        <br>
                        <div>Détenteur d'un titre professionnel bac +2 en développement web</div>
                        <br>
                        <div>A la recherche d'un emploi à proximité de Strasbourg où en télétravail</div>
                        <br>
                        <div>Ouvert à apprendre d'autre languages ...</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="contact">
        <div class="container">
            <div class="row justify-content-around">
                <div class="col-md-3 d-flex flex-column align-items-center">
                    <div class="w-50">
                        <a href="{{ asset('assets/cv.pdf') }}" class="text-white" target="_blank">
                            <img src="{{ asset('assets/images/cv.png') }}" alt="cv" class="img-fluid">
                        </a>
                    </div>
                    <div>
                        Mon CV
                    </div>
                </div>
                <div class="col-md-3 d-flex flex-column align-items-center">
                    <div class="w-50">
                        <a href="{{ asset('assets/cv.pdf') }}" class="text-white" target="_blank">
                            <img src="{{ asset('assets/images/message.webp') }}" alt="contact" class="img-fluid">
                        </a>
                    </div>
                    <div>
                        Contact
                    </div>
                </div>
                <div class="col-md-3 d-flex flex-column align-items-center">
                    <div class="w-50">
                        <a href="{{ asset('assets/cv.pdf') }}" class="text-white" target="_blank">
                            <img src="{{ asset('assets/images/project.png') }}" alt="projets" class="img-fluid">
                        </a>
                    </div>
                    <div>
                        Mes projets et code sources
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="skills">
        <div class="container-fluid py-5">
            <div class="h3 text-white text-bolder mb-5">
                Mes compétences
            </div>
            <div class="row">
                <div class="col-md-1">
                    <div class="d-flex flex-column justify-content-around">
                        {% for skill in skills %}
                            <div id="{{ skill.name }}" class="mb-3 skill" data-description="{{ skill.description }}"
                                 data-name="{{ skill.name }}">
                                <img src="{{ asset('assets/images/'~skill.image) }}" alt="{{ skill.name }}"
                                     class="img-fluid">
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="col-md-11 px-5">
                    <div id="description" class="description rounded d-flex justify-content-center align-items-center">
                        <small class="text-muted">Cliquez sur une compétence afin d'en savoir plus</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('assets/js/skills.js') }}"></script>
{% endblock %}
